<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etTipoEvento"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:hint="Tipo de Evento"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/etEquipoLocal"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:hint="Equipo Local"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/etPuntajeLocal"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:hint="Puntaje Local"
            android:inputType="number"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/etEquipoVisitante"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:hint="Equipo Visitante"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/etPuntajeVisitante"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:hint="Puntaje Visitante"
            android:inputType="number"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/etFechaEncuentro"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:hint="Fecha del evento"
            android:inputType="date"
            android:paddingHorizontal="12dp" />

        <EditText
            android:id="@+id/etUbicacion"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:hint="UbicaciÃ³n"
            android:paddingHorizontal="12dp" />

        <Button
            android:id="@+id/btnEstadoModal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo"
            android:backgroundTint="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnGuardarCambios"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF9800"
            android:text="Guardar"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>