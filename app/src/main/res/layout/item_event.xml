<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTipoEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de evento"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333333" />

        <!-- Equipos + puntajes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvEquipoLocal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Equipo Local"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvPuntajeLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="2"
                android:textColor="#FF5722"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vs"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvPuntajeVisitante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvEquipoVisitante"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Equipo Visitante"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/12/2025"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UbicaciÃ³n"
            android:textColor="#555555"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo"
            android:textStyle="italic"
            android:textColor="#009688"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btnEditarEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF9800"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:elevation="2dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
